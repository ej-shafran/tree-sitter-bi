{
  "name": "tree-sitter-bi",
  "version": "1.0.0",
  "description": "A TreeSitter parser for the [BI format](https://github.com/tsoding/bi-format).",
  "main": "grammar.js",
  "types": "bindings/node",
  "scripts": {
    "ts": "tree-sitter",
    "generate": "tree-sitter generate",
    "build": "tree-sitter build",
    "test": "tree-sitter test",
    "parse": "tree-sitter parse",
    "format": "prettier --write .",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ej-shafran/tree-sitter-bi.git"
  },
  "keywords": [
    "tree-sitter",
    "treesitter",
    "tsoding",
    "bi",
    "parser"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "author": "ej-shafran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ej-shafran/tree-sitter-bi/issues"
  },
  "homepage": "https://github.com/ej-shafran/tree-sitter-bi#readme",
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prettier": "^3.3.0",
    "tree-sitter-cli": "^0.22.6",
    "prebuildify": "^6.0.0"
  },
  "tree-sitter": [
    {
      "scope": "source.bi",
      "file-types": [
        "bi"
      ],
      "injection-regex": "^bi$",
      "highlights": [
        "queries/highlights.scm"
      ]
    }
  ]
}
